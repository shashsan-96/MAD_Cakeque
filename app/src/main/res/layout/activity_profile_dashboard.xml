<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chef"
    tools:context=".ProfileDashboard">


    <Button
        android:id="@+id/btncen"
        android:layout_width="339dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/create_foreground"
        android:text="@string/btnCreate"
        android:textSize="20sp"
        app:backgroundTint="@color/dogeblu1"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpro"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnpro"
        android:layout_width="339dp"
        android:layout_height="65dp"
        android:drawableRight="@drawable/view_foreground"
        android:text="@string/btnView"
        android:textSize="20sp"
        app:backgroundTint="@color/dogeblu1"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@drawable/headershape"
        app:layout_constraintBottom_toTopOf="@+id/btnpro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="245dp"
        android:layout_height="99dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtprofile"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.31" />

    <Button
        android:id="@+id/btnCake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cake_foreground"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/modiView"
        android:layout_width="373dp"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/footshape"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="339dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="@string/entUID"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <Button
        android:id="@+id/btnup"
        android:layout_width="339dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/modify_foreground"
        android:text="@string/btnModify"
        android:textSize="20sp"
        app:backgroundTint="@color/dogeblu1"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />

    <TextView
        android:id="@+id/txtExplain"
        android:layout_width="190dp"
        android:layout_height="84dp"
        android:text="@string/txtExplain"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />


</androidx.constraintlayout.widget.ConstraintLayout>