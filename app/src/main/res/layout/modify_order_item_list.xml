<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:orientation="vertical"
    android:background="@color/soft_pink">

    <TextView
        android:id="@+id/textView_OrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/orderId"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/textView_OrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="-27dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/formoval" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="-42dp"
        android:layout_marginLeft="12dp"/>

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/enterName"
        android:inputType="textPersonName"
        android:textColor="@color/gray"
        android:layout_marginTop="-42dp"
        android:layout_marginLeft="155dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/formoval"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-42dp"/>

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enterAddress"
        android:inputType="textPersonName"
        android:textColor="@color/gray"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-42dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/formoval"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Requirements"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-42dp" />

    <EditText
        android:id="@+id/editText_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enterRequirements"
        android:inputType="textPersonName"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-47dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/formoval"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Budget"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-42dp"/>

    <EditText
        android:id="@+id/editText_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enterBudget"
        android:inputType="textPersonName"
        android:textColor="@color/gray"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-48dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/formoval"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/Date"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-47dp"/>

    <EditText
        android:id="@+id/editText_ddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/deliverDate"
        android:textColor="@color/gray"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-36dp"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="25dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Update"
        android:textSize="20dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-65dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Delete"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="10dp" />
    
    <View
        android:layout_margin="5dp"
        android:background="#C5C5C5"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</LinearLayout>